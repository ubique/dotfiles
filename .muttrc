# IMAP settings
set imap_authenticators="oauthbearer"
set imap_oauth_refresh_command="/home/dbanschikov/wrk/mail/oauth2tool.sh me@ubique.spb.ru"
set spoolfile="imaps://me@ubique.spb.ru@imap.gmail.com"
set folder="imaps://me@ubique.spb.ru@imap.gmail.com"
set record="=Sent"
set postponed="=Drafts"
set ssl_starttls=yes
set ssl_force_tls=yes
set imap_check_subscribed
set mail_check=300
set auto_tag
set sort=threads

# Editor settings
set editor="vim '+set tw=65'"

# SMTP settings
set sendmail="/usr/bin/msmtp"
set realname="Dmitrii Banshchikov"
set from="me@ubique.spb.ru"
set use_from=yes
set use_envelope_from=yes

set signature="~/.signature"

