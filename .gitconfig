[user]
    name = Dmitrii Banshchikov
    email = me@ubique.spb.ru

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[merge]
    tool = vimdiff

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch

[color]
    ui = auto

[credential]
    helper = /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring

[log]
    decorate = true
    showSignature = true

[commit]
    gpgSign = false
